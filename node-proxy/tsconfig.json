{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": ".",
    "baseUrl": "./",
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["es2018"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}

