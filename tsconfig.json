{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es2018", "dom"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist/",
    "rootDir": ".",
    "baseUrl": "./",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"]
}
