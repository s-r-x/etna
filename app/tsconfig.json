{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@socket-io/*": ["./src/domains/ws/socket-io/*"],
      "@phoenix/*": ["./src/domains/ws/phoenix/*"],
      "@ws/*": ["./src/domains/ws/*"],
      "@testing": ["./src/testing/index.tsx"]
    },
    "outDir": "./dist/",
    "rootDir": ".",
    "baseUrl": "./",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"]
}
